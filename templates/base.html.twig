<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% include '_navbar.html.twig' %}
        <div class="row w-100">
            <div class="w-25 pt-5 ps-5">
                <turbo-frame
                    id="last-articles"
                    src="{{ fragment_uri(controller('App\\Controller\\HomeController::lastArticles')) }}"
                ></turbo-frame>
            </div>
            <div class="w-75 pt-5">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </body>
</html>
