{% extends 'base.html.twig' %}

{% block body %}
    <ul class="list-group">
        {% for article in pagination %}
            <li class="list-group-item">
                <h4>
                    <a href="{{ path('app_article', {id: article.id}) }}" title="{{ article.title }}">{{ article.title }}</a>
                </h4>
                <div>
                    {{ article.text|u.truncate(200, '...') }}
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="navigation position-absolute start-50 mt-5 mb-5">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}